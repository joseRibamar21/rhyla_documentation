{
  "name": "rhyla",
  "version": "1.0.4",
  "description": "Simple, template-driven Markdown documentation generator (CLI)",
  "bin": {
    "rhyla": "./bin/cli.js"
  },
  "type": "module",
  "license": "MIT",
  "author": "José Ribamar Pilar de Araújo Neto",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseRibamar21/rhyla_documentation.git"
  },
  "bugs": {
    "url": "https://github.com/joseRibamar21/rhyla_documentation/issues"
  },
  "homepage": "https://github.com/joseRibamar21/rhyla_documentation#readme",
  "keywords": [
    "docs",
    "documentation",
    "markdown",
    "static-site",
    "cli",
    "search",
    "dark-mode"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "index.js",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./client": "./src/client/index.js",
    "./express": "./src/client/index.js"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "cross-spawn": "^7.0.6",
    "express": "^4.18.2",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "markdown-it": "^13.0.1"
  }
}
